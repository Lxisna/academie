{% extends 'base.html.twig' %}

{% block title %}List of Formations
{% endblock %}

{% block body %}
	<h1>List of Formations</h1>

	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Description</th>
				<th>Start Date</th>
			</tr>
		</thead>
		<tbody>
			{% for formation in formations %}
				<tr>
					<td>{{ formation.id }}</td>
					<td>{{ formation.name }}</td>
					<td>{{ formation.description }}</td>
					<td>{{ formation.startDate|date('Y-m-d') }}</td>
					<td>
						<a href="{{ path('formation_show', {'id': formation.id}) }}">Show</a>
						<a href="{{ path('formation_edit', {'id': formation.id}) }}">Edit</a>
						<form action="{{ path('formation_delete', {'id': formation.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
							<button type="submit" class="btn btn-link">Delete</button>
						</form>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('formation_new') }}" class="btn btn-primary">Create new Formation</a>
{% endblock %}
