{% extends 'base.html.twig' %}

{% block title %}SuperAdmin - Manage Users
{% endblock %}

{% block body %}
	<h1>Manage Users</h1>
	<ul>
		{% for user in users %}
			<li>
				{{ user.email }}
				{% if not user.roles contains 'ROLE_ADMIN' %}
					<a href="{{ path('superadmin_users_promote', {id: user.id}) }}">Promote to Admin</a>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endblock %}
