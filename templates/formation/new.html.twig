{% extends 'base.html.twig' %}

{% block title %}Create New Formation
{% endblock %}

{% block body %}
	<h1>Create New Formation</h1>

	{{ form_start(form) }}
	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	{{ form_row(form.startDate) }}

	<button type="submit" class="btn btn-primary">Save</button>
	{{ form_end(form) }}

	<a href="{{ path('formation_index') }}" class="btn btn-link">Back to list</a>
{% endblock %}
