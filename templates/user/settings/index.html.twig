{% extends 'base.html.twig' %}

{% block title %}User Profile
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
			<div class="bg-white overflow-hidden shadow-xl sm:rounded-lg">
				<div class="p-6 sm:px-20 bg-white border-b border-gray-200">
					<div>
						<h1 class="text-2xl font-semibold text-gray-900">User Profile</h1>
						<p class="mt-2 text-sm text-gray-500">Welcome,
							{{ app.user.email }}</p>
					</div>

					<div class="mt-8">
						<div class="mt-6">
							<label class="block font-medium text-sm text-gray-700">Name</label>
							<p class="mt-1 text-sm text-gray-900">{{ app.user.name ?? 'Not provided' }}</p>
						</div>

						<div class="mt-6">
							<label class="block font-medium text-sm text-gray-700">Email</label>
							<p class="mt-1 text-sm text-gray-900">{{ app.user.email }}</p>
						</div>

						<div class="mt-6">
							<label class="block font-medium text-sm text-gray-700">Address</label>
							<p class="mt-1 text-sm text-gray-900">{{ app.user.address ?? 'Not provided' }}</p>
						</div>

						<div class="mt-6">
							<label class="block font-medium text-sm text-gray-700">Phone</label>
							<p class="mt-1 text-sm text-gray-900">{{ app.user.phone ?? 'Not provided' }}</p>
						</div>

						<div class="mt-6">
							<label class="block font-medium text-sm text-gray-700">Company ID</label>
							<p class="mt-1 text-sm text-gray-900">{{ app.user.companyId ?? 'Not provided' }}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% else %}
		<div class="text-center">
			<a href="/sign_up" class="inline-block px-4 py-2 bg-primary-700 text-white rounded-lg text-sm font-medium hover:bg-primary-800 focus:outline-none focus:ring-2 focus:ring-primary-500">
				Sign up
			</a>
		</div>
	{% endif %}
{% endblock %}
